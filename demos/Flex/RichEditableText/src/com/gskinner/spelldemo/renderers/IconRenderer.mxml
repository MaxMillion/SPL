<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
				xmlns:s="library://ns.adobe.com/flex/spark"
				xmlns:mx="library://ns.adobe.com/flex/mx"
				autoDrawBackground="false">
	
	<s:states>
		<s:State name="normal" />
		<s:State name="hovered" />
		<s:State name="selected" />
	</s:states>
	
	<fx:Script>
		<![CDATA[
			
		]]>
	</fx:Script>
	
	<s:Rect left="0" right="0" top="0" bottom="0">
		<s:fill>
			<s:SolidColor color.normal="0xFFFFFF"
						  color.hovered="0xCeDBEF"
						  color.selected="0xA8C6EE" />
		</s:fill>
	</s:Rect>
	
	<s:BitmapImage source="{data.icon}" verticalCenter="0" left="3" />
	<s:Label id="labelDisplay" text="{data.label}" verticalCenter="0" left="23" right="3" top="6" bottom="4"/>

</s:ItemRenderer>